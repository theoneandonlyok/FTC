package org.firstinspires.ftc.teamcode;

import com.qualcomm.robotcore.eventloop.opmode.Autonomous;
import com.qualcomm.robotcore.eventloop.opmode.LinearOpMode;
import com.qualcomm.robotcore.hardware.DcMotor;
import com.qualcomm.robotcore.hardware.DcMotorEx;
import com.qualcomm.robotcore.hardware.DcMotorSimple;

import org.firstinspires.ftc.vision.apriltag.AprilTagProcessor;
import org.firstinspires.ftc.vision.VisionPortal;

@Autonomous
public class AutonV1 extends LinearOpMode {
    private DcMotorEx outtakeOne, outtakeTwo;
    private DcMotor fl, fr, br, bl;
    private DcMotor intake;
    private DcMotor tran;
    private AprilTagProcessor aprilTag;
    private VisionPortal visionPortal;
    private int ticks;

    @Override
    public void runOpMode() {
        // Initialize hardware
        fl = hardwareMap.get(DcMotor.class, "fl");
        fr = hardwareMap.get(DcMotor.class, "fr");
        bl = hardwareMap.get(DcMotor.class, "bl");
        br = hardwareMap.get(DcMotor.class, "br");
        outtakeOne = hardwareMap.get(DcMotorEx.class, "out1");
        outtakeTwo = hardwareMap.get(DcMotorEx.class, "out2");
        intake = hardwareMap.get(DcMotor.class, "in");
        tran = hardwareMap.get(DcMotor.class, "tran");


        // Set motor directions
        fl.setDirection(DcMotor.Direction.FORWARD);
        bl.setDirection(DcMotor.Direction.FORWARD);
        fr.setDirection(DcMotor.Direction.REVERSE);
        br.setDirection(DcMotor.Direction.REVERSE);
        outtakeOne.setDirection(DcMotorEx.Direction.FORWARD);
        outtakeTwo.setDirection(DcMotor.Direction.REVERSE);

        // Reset and configure arm encoders
        outtakeOne.setMode(DcMotor.RunMode.STOP_AND_RESET_ENCODER);
        outtakeTwo.setMode(DcMotor.RunMode.STOP_AND_RESET_ENCODER);
        outtakeOne.setMode(DcMotor.RunMode.RUN_USING_ENCODER);
        outtakeTwo.setMode(DcMotor.RunMode.RUN_USING_ENCODER);


        // Set initial servo position
        telemetry.addData("Status", "Initialized");
        telemetry.update();

        waitForStart();

        if (opModeIsActive()) {
            moveBackward(1850, 0.30);
            shoot();
            sleep(1000);
            shoot();
            sleep(1000);
            shootEnd();
            sleep(1100);
            strafeRight(1300, 0.3);
        }
    }

    private void moveForward(int ticks, double power) {
        setTargetPosition(ticks);
        setMotorPower(power);
        waitForMotors();
    }

    private void moveBackward(int ticks, double power) {
        setTargetPosition(-ticks);
        setMotorPower(power);
        waitForMotors();
    }

    private void rotateLeft(int ticks, double power) {
        fl.setTargetPosition(fl.getCurrentPosition() - ticks);
        fr.setTargetPosition(fr.getCurrentPosition() + ticks);
        bl.setTargetPosition(bl.getCurrentPosition() - ticks);
        br.setTargetPosition(br.getCurrentPosition() + ticks);

        fl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        fr.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        bl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        br.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        setMotorPower(power);
        waitForMotors();
    }

    private void intake(double power) {
        intake.setPower(0.6);
        setMotorPower(power);
        waitForMotors();
    }

    private void transfer(double power) {
        tran.setPower(power);
    }

    private void rotateRight(int ticks, double power) {
        fl.setTargetPosition(fl.getCurrentPosition() + ticks);
        fr.setTargetPosition(fr.getCurrentPosition() - ticks);
        bl.setTargetPosition(bl.getCurrentPosition() + ticks);
        br.setTargetPosition(br.getCurrentPosition() - ticks);

        fl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        fr.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        bl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        br.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        setMotorPower(power);
        waitForMotors();
    }

    private void shoot() {
        outtakeOne.setVelocity(-1280);
        outtakeTwo.setVelocity(-1280);
        sleep(4000);
        intake.setPower(0.8);
        transfer(0.9);
        sleep(110);
        intake.setPower(0);
        transfer(0);
        outtakeOne.setVelocity(0);
        outtakeTwo.setVelocity(0);
    }
        private void shootEnd() {
        outtakeOne.setVelocity(-1280);
        outtakeTwo.setVelocity(-1280);
        sleep(4000);
        intake.setPower(0.8);
        transfer(0.9);
        sleep(115);
        intake.setPower(0);
        transfer(0);
        outtakeOne.setVelocity(0);
        outtakeTwo.setVelocity(0);
    }

    private void strafeLeft(int ticks, double power) {
        fl.setTargetPosition(fl.getCurrentPosition() - ticks);
        fr.setTargetPosition(fr.getCurrentPosition() + ticks);
        bl.setTargetPosition(bl.getCurrentPosition() + ticks);
        br.setTargetPosition(br.getCurrentPosition() - ticks);

        fl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        fr.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        bl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        br.setMode(DcMotor.RunMode.RUN_TO_POSITION);

        setMotorPower(power);
        waitForMotors();
    }

    private void strafeRight(int ticks, double power) {
        fl.setTargetPosition(fl.getCurrentPosition() + ticks);
        fr.setTargetPosition(fr.getCurrentPosition() - ticks);
        bl.setTargetPosition(bl.getCurrentPosition() - ticks);
        br.setTargetPosition(br.getCurrentPosition() + ticks);

        fl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        fr.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        bl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        br.setMode(DcMotor.RunMode.RUN_TO_POSITION);

        setMotorPower(power);
        waitForMotors();
    }

    private void setTargetPosition(int ticks) {
        fl.setTargetPosition(fl.getCurrentPosition() + ticks);
        fr.setTargetPosition(fr.getCurrentPosition() + ticks);
        bl.setTargetPosition(bl.getCurrentPosition() + ticks);
        br.setTargetPosition(br.getCurrentPosition() + ticks);

        fl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        fr.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        bl.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        br.setMode(DcMotor.RunMode.RUN_TO_POSITION);
    }

    private void setMotorPower(double power) {
        fl.setPower(power);
        fr.setPower(power);
        bl.setPower(power);
        br.setPower(power);
    }

    private void waitForMotors() {
        while (opModeIsActive() && (fl.isBusy() || fr.isBusy() || bl.isBusy() || br.isBusy())) {
            telemetry.addData("Moving", "Motors running...");
            telemetry.addData("FL Target", fl.getTargetPosition());
            telemetry.addData("FL Current", fl.getCurrentPosition());
            telemetry.update();
        }
        stopMotors();
    }

    private void stopMotors() {
        fl.setPower(0);
        fr.setPower(0);
        bl.setPower(0);
        br.setPower(0);
    }

    private void shooting(int position, double power) {
        outtakeOne.setTargetPosition(position);
        outtakeTwo.setTargetPosition(position);
        outtakeOne.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        outtakeTwo.setMode(DcMotor.RunMode.RUN_TO_POSITION);
        outtakeOne.setVelocity(1500);
        outtakeTwo.setVelocity(1500);

        while (opModeIsActive() && outtakeOne.isBusy() && outtakeTwo.isBusy()) {
            telemetry.addData("Arm", "Moving to position %d", position);
            telemetry.update();
        }
    }
}
